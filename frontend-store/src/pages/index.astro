---
// src/pages/index.astro
import Layout from "../layouts/Layout.astro";
import Button from "../components/atoms/Button.astro"; // Cambiamos la extensión a .astro
---

<Layout title="Pack Off Store - Inicio">
  <div class="container mx-auto px-4 py-8 text-center">
    <h1 class="text-5xl font-bold text-yellow-400">
      ¡Bienvenido a Pack Off Store!
    </h1>
    <p class="mt-4 text-lg">Tu tienda especializada en cartas Pokémon TCG.</p>

    <div class="mt-8">
      {
        /* Ahora es un componente de Astro. 
              No necesita "client:load". Es 100% HTML y CSS, sin JavaScript.
              Le pasamos un href para que actúe como un enlace.
            */
      }
      <Button href="/catalogo">Ver Catálogo</Button>
    </div>
  </div>
</Layout>

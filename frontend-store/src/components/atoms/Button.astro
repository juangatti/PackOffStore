---
// src/components/atoms/Boton.astro
interface Props {
  href?: string; // Hacemos el href opcional
  className?: string;
}

const { href, className } = Astro.props;

const baseStyles =
  "inline-block px-6 py-2 font-semibold text-center rounded-lg shadow-md focus:outline-none focus:ring-2 focus:ring-opacity-75";
const defaultStyles =
  "bg-yellow-500 text-slate-900 hover:bg-yellow-400 focus:ring-yellow-500";

// Si el bot√≥n tiene un href, se renderiza como un enlace <a>
// Si no, se renderiza como un <button>
const Tag = href ? "a" : "button";
---

<Tag href={href} class:list={[baseStyles, defaultStyles, className]}>
  <slot />
</Tag>
